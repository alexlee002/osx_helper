{
	"files": [
		// files to be backup & restore
		"~/.zsh_history",
		"~/.zshrc", 

		"~/.bash_profile",

		"~/.vim",
		"~/.viminfo",
		"~/.vimrc",

		"~/.ssh",
		"~/.sqliterc",
		// "~/.cocoapods"

		// apps data
		"~/Library/Application Support/StarUML", 
		"~/Library/Application Support/Sublime Text 3",
		"~/Library/Containers/net.shinyfrog.bear",
		"~/Library/Application Support/SourceTree",
		// xcode
		"~/Library/Developer/Xcode/Archives",
		"~/Library/Developer/Xcode/Templates",
		"~/Library/Developer/Xcode/UserData",
		// dictionaries
		"~/Library/Dictionaries",

		"/usr/local/bin/bdpac"
	],

	"defaults":[
		// defaults domains to backup & restore
		"com.apple.Terminal"
	],

	"brews": [
		{
			// "tap": "caskroom/fonts"
			// quick-lock plugins
			"cask_ids":[
				"qlcolorcode", 
				"qlstephen", 
				"qlmarkdown", 
				"quicklook-json", 
				"qlimagesize", 
				"webpquicklook", 
				"suspicious-package", 
				"quicklookase", 
				"qlvideo"
			]
		},
		{
			"cask_ids":[
				"staruml",
				"sublime-text",
				"sourcetree",
				"qq",
				"wechat",
				"baiduhi",
				"the-unarchiver",
				"google-chrome"
			],

			"brew_ids": [
				"trash"
			]
		}
	],

	"osx_config": [
		// disable Force Click and haptic feedback
		"defaults write com.apple.AppleMultitouchTrackpad ActuateDetents -int 0",
		// enable tap to click
		"defaults write com.apple.AppleMultitouchTrackpad Clicking -int 1",
		"defaults write com.apple.AppleMultitouchTrackpad TrackpadThreeFingerTapGesture -int 2",

		"defaults write com.apple.Dock showhidden -bool YES",
		"defaults write com.apple.Dock largesize -int 80",
		"defaults write com.apple.Dock tilesize -int 36",
		"defaults write com.apple.Dock magnification -bool true",
		// hot corners: bottom-right => lock screen(13)
		"defaults write com.apple.Dock wvous-br-corner -int 13",
		"defaults write com.apple.Dock wvous-br-modifier -int 0",

		// show battery percentage.
		"defaults write com.apple.menuextra.battery ShowPercent -string \"YES\"",
		
		// show extensions in finder
		"defaults write NSGlobalDomain AppleShowAllExtensions -bool true",
		// //Enable full keyboard access for all controls
		"defaults write NSGlobalDomain AppleKeyboardUIMode -int 3",


		"defaults write com.apple.finder ShowStatusBar -bool true",
		"defaults write com.apple.finder ShowPathbar -bool true",
		"defaults write com.apple.finder _FXSortFoldersFirst -bool true",
		// search current path
		"defaults write com.apple.finder FXDefaultSearchScope -string \"SCcf\"",
		// Disable the warning when changing a file extension
		"defaults write com.apple.finder FXEnableExtensionChangeWarning -bool false",
		// open ${HOME} when open new window
		"defaults write com.apple.finder NewWindowTarget -string \"PfHm\"",
		"defaults write com.apple.finder NewWindowTargetPath -string \"file://${HOME}/\"",

		//hide siri in menu bar
		"defaults write com.apple.Siri StatusMenuVisible -bool false",
		"defaults write com.apple.Siri VoiceTriggerUserEnabled -bool false",

		// restart apps
		"killall Finder",
		"killall Dock"
	]	
}